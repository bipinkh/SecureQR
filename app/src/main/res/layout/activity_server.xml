<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bipinkh.secureqr.ServerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Firebase Database "
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:id="@+id/toptext"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/keyView"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:layout_marginTop="50dp"
        android:hint="Key here"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valueView"
        android:layout_below="@+id/keyView"
        android:layout_marginTop="20dp"
        android:hint="Value here"
        />

    <Button
        android:id="@+id/buttonView"
        style="@android:style/Widget.Material.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueView"
        android:layout_marginTop="20dp"
        android:text="Submit to Firebase" />

</RelativeLayout>
