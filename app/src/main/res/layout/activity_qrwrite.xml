<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bipinkh.secureqr.QRwriteActivity">

    <EditText
        android:id="@+id/messagebox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="?android:attr/actionModeBackground"
        android:gravity="bottom|left"
        android:layout_below="@+id/receiverEmail"
        android:hint="Enter String messages here"
        android:lines="7" />

    <EditText
        android:id="@+id/receiverEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="?android:attr/actionModeBackground"
        android:hint="Enter receipent email" />


    <Button
        android:id="@+id/makeQRbtn"
        style="@android:style/Widget.DeviceDefault.Light.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messagebox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="?android:attr/textColorLink"
        android:drawableLeft="?android:attr/actionModeSelectAllDrawable"
        android:hint=" Click to make QR " />

</RelativeLayout>
