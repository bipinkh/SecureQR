<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bipinkh.secureqr.ScanActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/scanTopText"
        android:layout_width="118dp"
        android:layout_height="32dp"
        android:text="QR Scan Result:"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="0dp" />

    <ScrollView
        android:id="@+id/scanScroller"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scanResultText"/>
    </ScrollView>

    <Button
        android:id="@+id/decodeANDdecrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decode (default key)"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="261dp"
        />

    <Button
        android:id="@+id/decodeWithDifferent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrypt (different key)"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="291dp"
        />




</LinearLayout>
